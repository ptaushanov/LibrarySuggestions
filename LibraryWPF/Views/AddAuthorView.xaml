<Window x:Class="LibraryWPF.Views.AddAuthorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryWPF.Views"
        xmlns:vm ="clr-namespace:LibraryWPF.ViewModels" 
        mc:Ignorable="d"
        Title="AddAuthorView" Height="450" Width="800"
        ResizeMode="CanMinimize">
    <Window.DataContext>
        <vm:AddAuthorVM/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label 
            Grid.Row="1"
            Grid.Column="0"
            Content="Заглавие"
            VerticalAlignment="Center"
            FontFamily="Cascadia Code"
            FontSize="14"
            Margin="30 10 5 10"
        />

            <TextBox 
            Grid.Row="1"
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="2"
            Height="25"
            Width="200"
            HorizontalAlignment="Left"
            Margin="10 0 0 0"
            />

            <Label 
            Grid.Row="2"
            Grid.Column="0"
            Content="Категория"
            VerticalAlignment="Center"
            FontFamily="Cascadia Code"
            FontSize="14"
            Margin="30 10 5 10"
        />

            <ComboBox 
            Grid.Row="2"
            Grid.Column="1"
            Height="25"
            Width="200"
            HorizontalAlignment="Left"
            Margin="10 0 0 0"
            BorderThickness="2"
            BorderBrush="Black"
            FontFamily="Cascadia Code"
            ItemsSource="{Binding Categories}"
        />

            <Label 
            Grid.Row="3"
            Grid.Column="0"
            Content="Име"
            VerticalAlignment="Center"
            FontFamily="Cascadia Code"
            FontSize="14"
            Margin="30 10 5 10"
        />

            <TextBox 
            Grid.Row="3"
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="2"
            Height="25"
            Width="200"
            HorizontalAlignment="Left"
            Margin="10 0 0 0"
            />

            <Label 
            Grid.Row="4"
            Grid.Column="0"
            Content="Фамилия"
            VerticalAlignment="Center"
            FontFamily="Cascadia Code"
            FontSize="14"
            Margin="30 10 5 10"
        />

            <TextBox 
            Grid.Row="4"
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="2"
            Height="25"
            Width="200"
            HorizontalAlignment="Left"
            Margin="10 0 0 0"
            />

            <Label 
            Grid.Row="5"
            Grid.Column="0"
            Content="Издател"
            VerticalAlignment="Center"
            FontFamily="Cascadia Code"
            FontSize="14"
            Margin="30 10 5 10"
        />

            <TextBox 
            Grid.Row="5"
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="2"
            Height="25"
            Width="200"
            HorizontalAlignment="Left"
            Margin="10 0 0 0"
            />
        </Grid>

    </Grid>
</Window>
